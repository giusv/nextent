(in-package :gui)
(defprim alt (default &rest elements)
  (:pretty () (list 'alt (:default (synth :pretty default) :elements (synth-all :pretty elements))))
  (:req (path)
        (html:taglist 
         (doc:text "Tale elemento mostra, a seconda dell'URL, una alternativa della lista")
         (if (not elements) (doc:text " vuota") (doc:text " seguente:"))
         (ul (if default (listify (synth :req default path))) 
             (mapcar #'listify (synth-all :brief elements path)))))
  (:brief (path) (synth :req this path))
  (:reqlist (path) (apply #'append (synth-all :req (cons default elements) path)))
  (:template () (html:tag 'router-outlet
                          (doc:empty))) 
  (:controller () (bb-empty))
  (:components (father) (apply #'append
                               (let ((unit-name (if father (symb father "-DEFAULT")
                                                    (symb "DEFAULT"))))
                                 (list (bb-unit unit-name
                                                (bb-import "@angular/core" 'component)
                                                ;; (bb-import "@angular/http" 'http 'response)
                                                ;; (bb-import "rxjs/Rx" 'observable)
                                                ;; (bb-import "rxjs/add/operator/map")
                                                ;; (bb-import "rxjs/add/operator/catch")
                                                (synth :imports default)
                                                (bb-annotation 'component
                                                              :selector (bb-const (string-downcase unit-name))
                                                              :template (bb-template (synth :template default)))
                                                (bb-class (symb unit-name "-COMPONENT")
                                                          :constructor (bb-constructor (synth :dependencies this))
                                                          :fields (list (synth :controller default))))))
                               (synth-all :components elements father)))
  (:routes (father) (cons (bb-object :path (bb-const "")
                                     :component (bb-static (mkstr father "-default-component")))
                          (apply #'append (synth-all :routes elements father))))
  (:imports () (apply #'append (synth :imports default) (synth-all :imports elements)))
  (:dependencies () (apply #'append (synth :dependencies default) (synth-all :dependencies elements))))
